#!/bin/bash
set -ex

# install mysql tables
sudo mysql -u root asterisk < tables-needed.mysql

# install files
sudo tar xvfz files-needed.tgz -C /

# ask FreePBX to rebuild configuration

sudo /usr/local/sbin/amportal a r

# check generated configuration

#for FILE in configs/*
